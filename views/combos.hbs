<!-- Popup Form -->
<div class="overlay" id="overlay"></div>
<div class="popup-form" id="popup-form">
  <span class="close-icon" onclick="closePopup()">âœ–</span> <!-- Close icon -->
  <h2>Order Form</h2>
  <form id="order-form" action="/recomandedItem/submit-order" method="POST" enctype="multipart/form-data" >
    <input type="hidden" id="food-name"  name="foodName">
    <input type="hidden" id="food-price" name="foodPrice">

    <label for="food-name-display">Food Name:</label>
    <input type="text" id="food-name-display" name="food-name-display" readonly><br>
    <label for="food-price-display">Food Price:</label>
    <input type="text" id="food-price-display" name="food-price-display" readonly><br>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required><br>
    <label for="phone">Phone Number:</label>
    <input type="text" id="phone" name="phone" required><br>
    <label for="table">Table Number:</label>
    <select id="table" name="table" required>
      <option value="">Select Table</option>
      <option value="1">Table 1</option>
      <option value="2">Table 2</option>
      <option value="3">Table 3</option>
      <option value="4">Table 4</option>
      <option value="5">Table 5</option>
      <option value="6">Table 6</option>
    </select><br><br>

    <label for="plates">Number of Plates:</label>
    <input type ="number" id="plates" name="plates" required><br>
    <button type="submit">Submit</button>
  </form>
</div>

